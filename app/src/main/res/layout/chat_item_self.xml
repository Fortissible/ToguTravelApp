<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_avatar_self"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/chat_context_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/chat_context_background_self"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Lorem Ipsum Dolor Amet"
        android:maxEms="30"
        app:layout_constraintTop_toTopOf="@id/chat_avatar_self"
        app:layout_constraintEnd_toStartOf="@id/chat_avatar_self"
        app:layout_constraintBottom_toBottomOf="@id/chat_avatar_self"/>

    <TextView
        android:id="@+id/chat_timestamp_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/quantum_grey"
        android:textSize="6sp"
        android:text="18:26"
        app:layout_constraintTop_toBottomOf="@id/chat_context_self"
        app:layout_constraintEnd_toEndOf="@id/chat_context_self"/>



</androidx.constraintlayout.widget.ConstraintLayout>